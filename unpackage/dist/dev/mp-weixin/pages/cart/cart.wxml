<view class="cartContainer"><view class="cartList"><block wx:for="{{cartList}}" wx:for-item="cartItem" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['changeSelected',[!cartItem.isSelected,index]]]]]}}" class="{{['iconfont icon-iconfontxuanzhong ',(cartItem.isSelected)?'selected':'']}}" bindtap="__e"></text><view class="shopItem"><image class="shopImg" src="{{cartItem.image}}" mode></image><view class="shopInfo"><text>{{cartItem.name}}</text><text class="price">{{"￥"+cartItem.price}}</text></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['changeCount',[true,index]]]]]}}" class="add" bindtap="__e">+</text><text class="count">{{''+cartItem.count+''}}</text><text data-event-opts="{{[['tap',[['changeCount',[false,index]]]]]}}" class="del" bindtap="__e">-</text></view></view></block></view><view class="cartFooter"><text data-event-opts="{{[['tap',[['changeAllSelected',[!isAllSelected]]]]]}}" class="{{['iconfont icon-iconfontxuanzhong ',(isAllSelected)?'selected':'']}}" bindtap="__e"></text><text class="allSelected">{{"已选 "+totalCount}}</text><view class="right"><text class="totalPrice">{{"合计: ￥"+totalPrice}}</text><text class="preOrder">下单</text></view></view></view>